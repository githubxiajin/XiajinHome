<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <LinearLayout
        android:id="@+id/l_l_title"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/my_account_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_margin="7dp"
            android:src="@drawable/iconfont_biaoti" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="标题"
            android:textColor="@color/background_floating_material_dark"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_weight="3"
            android:autoLink="web"
            android:background="#fff"
            android:hint="请输入标题"
            android:imeOptions="actionDone"
            android:lineSpacingExtra="6.0dp"
            android:textColor="#5f5f5f"
            android:textColorHint="@color/guide_color"
            android:textCursorDrawable="@null"
            android:textSize="16.0sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_material_light" />


    <LinearLayout
        android:id="@+id/l_l_address"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/my_account_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_margin="7dp"
            android:src="@drawable/iconfont_dizhi2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="地址"
            android:textColor="@color/background_floating_material_dark"
            android:textSize="16dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="工作地址?"
            android:textColor="@color/guide_color"
            android:textSize="16dp"
            android:id="@+id/tv_address" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_material_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/my_account_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/l_l_price">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_margin="7dp"
            android:src="@drawable/iconfont_jine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="工资"
            android:textColor="@color/background_floating_material_dark"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="工资待遇?"
            android:textColor="@color/guide_color"
            android:textSize="16dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_material_light" />

    <LinearLayout
        android:id="@+id/l_l_phone"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_below="@id/line_3"
        android:layout_gravity="center_vertical"
        android:background="@drawable/my_account_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_margin="7dp"
            android:src="@drawable/iconfont_dianhua" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="电话"
            android:textColor="@color/background_floating_material_dark"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_weight="3"
            android:autoLink="web"
            android:background="#fff"
            android:hint="请输入电话号码"
            android:imeOptions="actionDone"
            android:lineSpacingExtra="6.0dp"
            android:textColor="#5f5f5f"
            android:textColorHint="@color/guide_color"
            android:textCursorDrawable="@null"
            android:textSize="16.0sp" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_material_light" />
    <LinearLayout
        android:id="@+id/l_l_content"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/my_account_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_margin="7dp"
            android:src="@drawable/iconfont_yiyouneirong" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="内容"
            android:textColor="@color/background_floating_material_dark"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_weight="3"
            android:autoLink="web"
            android:background="#fff"
            android:hint="请输入招聘内容"
            android:imeOptions="actionDone"
            android:lineSpacingExtra="6.0dp"
            android:textColor="#5f5f5f"
            android:textColorHint="@color/guide_color"
            android:textCursorDrawable="@null"
            android:textSize="16.0sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_material_light" />


    <Button
        android:id="@+id/next_bt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/button_bg"
        android:text="发布"
        android:textColor="@color/button_color" />
</LinearLayout>