<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_time_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_grey"
    android:gravity="fill_horizontal"
    android:orientation="vertical" >

    
    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:text="接受消息通知"
            android:textColor="@color/black"
            android:textSize="@dimen/ssg_textSize" />

        <com.xiajin.home.CustomView.ToggleButton.ToggleButton
            android:id="@+id/mtogglebutton"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp" />
    </RelativeLayout>

<RelativeLayout
    android:id="@+id/rl_voice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
         android:visibility="gone">

        <TextView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:text="声音"
            android:textColor="@color/black"
            android:textSize="@dimen/ssg_textSize" />

        <com.xiajin.home.CustomView.ToggleButton.ToggleButton
            android:id="@+id/mtogglebutton_voice"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_vibrate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:text="震动"
            android:textColor="@color/black"
            android:textSize="@dimen/ssg_textSize" />

        <com.xiajin.home.CustomView.ToggleButton.ToggleButton
            android:id="@+id/mtogglebutton_vibrate"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp" />
    </RelativeLayout>
</LinearLayout>